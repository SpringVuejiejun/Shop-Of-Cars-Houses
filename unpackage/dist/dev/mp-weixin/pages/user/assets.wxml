<view class="container"><view class="header-card"><view class="total-assets"><text class="label">总资产</text><text class="value">¥{{a}}万</text></view><view class="assets-breakdown"><view class="breakdown-item"><text class="label">可用余额</text><text class="value">¥{{b}}万</text></view><view class="breakdown-item"><text class="label">冻结金额</text><text class="value">¥{{c}}万</text></view></view></view><view class="assets-detail"><view class="section-title">资产明细</view><view class="detail-list"><view wx:for="{{d}}" wx:for-item="item" wx:key="h" class="detail-item"><view class="item-left"><text class="item-name">{{item.a}}</text><text class="item-time">{{item.b}}</text></view><view class="item-right"><text class="{{['item-amount', item.e && 'income', item.f && 'expense']}}">{{item.c}}¥{{item.d}}万 </text><text class="item-status">{{item.g}}</text></view></view></view></view><view class="bottom-buttons"><button class="recharge-btn" bindtap="{{e}}">充值</button><button class="withdraw-btn" bindtap="{{f}}">提现</button></view></view>